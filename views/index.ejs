</head>
<body>
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-6">
                <% if (!locals.image) { %>
                    <form action="/artistic" method="post" enctype="multipart/form-data">
                        <h3>Select the style that you want</h3>
                        <select class="form-select form-select-lg" name="style" id="style">
                            <option value="udnie">Udnie</option>
                            <option value="wave">Wave</option>
                            <option value="la_muse">La Muse</option>
                            <option value="rain_princess">Rain Princess???</option>
                        </select>
                        <br>
                        <h3>ðŸ‘‡ Upload your image ðŸ‘‡</h3>
                        <input class="form-control" type="file" name="imageFile" id="imageFile" accept="image/*" required>
                        <br>
                        <button class="btn btn-primary" type="submit">Aplicar Estilo</button>
                    </form>
                    <% } else { %>
                        <h1>Imagem ArtÃ­stica...</h1>
                        <img src=<%= image %> alt="img">
                    <% } %>
            </div>
            <!-- Column end -->
        </div>
        <!-- Row end -->
    </div>
    <!-- Container end -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>